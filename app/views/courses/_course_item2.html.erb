<div class="course-item row">
  <div class="col-md-6">
    <%= image_tag "http://placekitten.com/g/400/400", alt: t("image"),
      class: "img-course img-rounded img-responsive" %>
  </div>
  <div class="col-md-6">
    <h3><%= link_to course.name, course %></h3>
    <p><%= t "you_learn" %></p>
    <p><%= course.description %></p>
    <%= render "courses/course_button", course: course %>
  </div>
</div>
