<% provide :title, @user.name %>

<div class="row">
  <aside class="col-md-3">
    <div class="row">
      <section class="user_info">
        <%= render "shared/user_info", user: @user %>
      </section>
    </div>
    <div class="row">
        <%= render "shared/stats", user: @user,
          destroy: @relationship_destroy, build: @relationship_build %>
    </div>
  </aside>
  <div class="col-md-9">
    <h3>
      <%= t "activities" %>
    </h3>
    <% if @user.tests.any? %>
      <ol class="test">
        <%= render @tests %>
      </ol>
      <%= will_paginate @tests %>
    <% end %>
  </div>
</div>

