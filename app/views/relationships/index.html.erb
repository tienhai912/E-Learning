<% provide :title, @user.name %>

<div class="row">
  <aside class="col-md-4">
    <div class="row">
      <section class="user_info">
        <%= render "shared/user_info", user: @user %>
      </section>
    </div>
    <div class="row">
        <section class="stats">
          <%= render "shared/stats", user: @user,
            destroy: @relationship_destroy, build: @relationship_build %>
        </section>
      </div>
    <div class="row">
      <section class="stats">
        <% if @users.any? %>
          <div class="user-avatars">
            <% @users.each do |user| %>
              <%= link_to gravatar_for(user,
                size: Settings.user.small_gravatar), user %>
            <% end %>
          </div>
        <% end %>
      </section>
    </div>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate @users %>
    <% end %>
  </div>
</div>
