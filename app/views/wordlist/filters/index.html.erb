<% provide :title, t("my_words") %>

<h1><%= t "word_list" %></h1>
<div class="row">
  <h3><%= t "categories" %></h3>
<form action = "/wordlist/filters">
  <select class="mdc-select col-md-2" name="select_box">
    <option type="selectbox" value="all"  default selected><%= t"all" %></option>
    <% all_categories.each do |category| %>
    <option type="selectbox" value="<%= category.name %>"><%= category.name %></option>
    <% end %>
  </select>
  <label class="radio-inline col-md-offset-1">
    <input type="radio" name="radio"
      id="1" value="learned" >
    <%= t "learned" %>
  </label>
  <label class="radio-inline col-md-offset-1">
    <input type="radio" name="radio"
      id="2" value="not_learned" >
    <%= t "not_learned" %>
  </label>
  <label class="radio-inline col-md-offset-1">
    <input type="radio" name="radio"
      id="3" value="all" checked="checked" >
    <%= t "all" %>
  </label>
  <button type="submit" class="btn btn-default col-md-offset-1">
    <%= t "filter" %>
  </button>
</form>
<p>
  <%= t "words_in" %><%=t "category" ": " "#{@data_select_box}" %>
  <%= t "that_you_have" " " "#{@data_radio}" %>
</p>
</div>
<div class="row">
  <div class="words-list">
    <ul class="words">
      <% @words.each do |word| %>
        <%= render "wordlist/filters/word", word: word %>
      <% end %>
    </ul>
  </div>
  <%= will_paginate @words %>
</div>
