<% provide :title, @category.name %>

<h1 class="category-name">
  <%= t "courses_in" %>
  <%= link_to @category.name, @category%>
</h1>
<h1 class="category-name"><%= link_to @category.name, @category%></h1>
<% if user_signed_in? && current_user.is_admin %>
  <%= link_to t("new_course"), new_course_path(category_id: @category.id), class: "btn btn-primary" %>
<% end %>
<div class="course-list">
  <% @courses.each_with_index do |course, index| %>
    <% if index.even? %>
      <%= render "courses/course_item1", course: course, build_enroll: @build_enroll %>
    <% else %>
      <%= render "courses/course_item2", course: course, build_enroll: @build_enroll %>
    <% end %>
  <% end %>
</div>
<%= will_paginate @courses %>
